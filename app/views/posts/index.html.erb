<h2>つぶやき投稿一覧</h2>
<%= notice %>
<table>
  <tr>
    <th>投稿</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to 'つぶやきを編集する',edit_post_path(post.id) %></td>
    <td><%= link_to 'つぶやきを削除する',post_path(post.id),method: :delete,data: {confirm: '本当に削除してよろしいですか？'} %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'つぶやきを投稿する',new_post_path %>
